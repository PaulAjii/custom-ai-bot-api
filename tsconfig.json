{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
